{
  "manifest_version": 3,
  "name": "PoupaCash ðŸ’¸",
  "version": "1.0.0",
  "description": "ExtensÃ£o de cashback e descontos - Amazon e Shein",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.shein.com/*",
    "https://api.amazon.com/*",
    "https://api.shein.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.shein.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon48.png"
  }
}
