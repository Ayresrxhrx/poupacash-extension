{
  "manifest_version": 3,
  "name": "PoupaCash",
  "description": "Extens√£o de cupons e cashback com parceiros afiliados oficiais.",
  "version": "1.0.0",

  "action": {
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background/service-worker.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
